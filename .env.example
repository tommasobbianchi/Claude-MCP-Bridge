# Authentication (generate with: openssl rand -base64 32)
BEARER_TOKEN=changeme

# Directories accessible by the bridge (comma-separated absolute paths)
ALLOWED_DIRS_RAW=/home/tommaso/projects

# Blocked command patterns (regex, pipe-separated)
BLOCKED_COMMANDS_RAW=rm\s+-rf\s+/|shutdown|reboot|mkfs|dd\s+if=|chmod\s+777\s+/|:\(\)\{|passwd|userdel|groupdel

# Rate limits
MAX_REQUESTS_PER_MINUTE=10
MAX_CONCURRENT_CLAUDE=3

# Claude CLI
CLAUDE_CLI_PATH=claude
CLAUDE_DEFAULT_MAX_TURNS=5
CLAUDE_MAX_TIMEOUT=600

# Server
HOST=127.0.0.1
PORT=8787
LOG_LEVEL=INFO

# Audit log
LOG_DIR=/home/tommaso/.local/share/mcp-bridge
MAX_LOG_SIZE_MB=50
